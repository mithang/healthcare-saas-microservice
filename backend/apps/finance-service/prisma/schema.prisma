generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Commission {
  id           Int      @id @default(autoincrement())
  partner      String
  partnerType  String
  revenue      Float
  commission   Float
  rate         String
  month        String
  status       String   @default("pending")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Revenue {
  id          Int      @id @default(autoincrement())
  timestamp   DateTime @default(now())
  type        String
  details     String
  amount      Float
  fee         Float
  net         Float
  status      String   @default("Done")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Withdrawal {
  id             Int      @id @default(autoincrement())
  transactionId  String   @unique
  partnerName    String
  partnerType    String
  amount         Float
  bankName       String
  accountName    String
  accountNumber  String
  requestDate    DateTime @default(now())
  processedDate  DateTime?
  status         String   @default("pending")
  note           String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
