generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client-audit-log"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Log {
  id        Int      @id @default(autoincrement())
  level     LogLevel
  message   String
  category  String
  timestamp DateTime @default(now())

  @@index([timestamp])
  @@index([level])
  @@index([category])
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
}
