generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client-engagement-service"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CommentStatus {
  PENDING
  APPROVED
  SPAM
  DELETED
}

model Comment {
  id        Int           @id @default(autoincrement())
  userName  String
  userId    Int?
  content   String
  postTitle String
  postId    Int?
  status    CommentStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}
