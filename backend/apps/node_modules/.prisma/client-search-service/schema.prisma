generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client-search-service"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EntityType {
  DOCTOR
  CLINIC
  HOSPITAL
  PHARMACY
  PHARMACIST
}

model SearchEntity {
  id         Int        @id @default(autoincrement())
  entityType EntityType
  entityId   String
  name       String
  data       Json
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@unique([entityType, entityId])
  @@index([entityType])
  @@index([name])
}
