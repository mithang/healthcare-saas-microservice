generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client-notification-service"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id        Int             @id @default(autoincrement())
  userId    String
  title     String
  content   String
  type      NotificationType
  createdAt DateTime        @default(now())
  readAt    DateTime?
}

enum NotificationType {
  EMAIL
  SMS
  PUSH
}
