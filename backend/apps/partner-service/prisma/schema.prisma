generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client-partner-service"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id          Int      @id @default(autoincrement())
  name        String
  specialty   String
  hospital    String?
  phone       String
  email       String?
  description String?
  rating      Float?
  isVerified  Boolean  @default(false)
  thumbnail   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Clinic {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  phone       String
  email       String?
  description String?
  specialties String[]
  rating      Float?
  isVerified  Boolean  @default(false)
  thumbnail   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Hospital {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  phone       String
  website     String?
  description String?
  departments String[]
  beds        Int?
  rating      Float?
  isVerified  Boolean  @default(false)
  thumbnail   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Pharmacy {
  id                Int      @id @default(autoincrement())
  name              String
  address           String
  phone             String
  email             String?
  website           String?
  description       String?
  rating            Float?   @default(0)
  reviewCount       Int      @default(0)
  isVerified        Boolean  @default(false)
  thumbnail         String?
  outletOwner       String?
  gppNumber         String?
  gppImage          String?
  pointsCMEOnline   Int      @default(0)
  memberRank        String   @default("bronze")
  status            String   @default("active")
  provinceCode      String?
  districtCode      String?
  wardCode          String?
  streetName        String?
  os                String?
  token             String?
  scName            String?
  dynamicLink       String?
  bannerLandingPage String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Patient {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String?
  visits    Int      @default(0)
  lastVisit String?
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Pharmacist {
  id                Int      @id @default(autoincrement())
  fullName          String
  phoneNumber       String
  address           String
  specialistly      String?
  career            String?
  provinceCode      String?
  districtCode      String?
  wardCode          String?
  streetName        String?
  os                String?
  token             String?
  scName            String?
  pointsCMEOnline   Int      @default(0)
  memberRank        String   @default("bronze")
  dynamicLink       String?
  bannerLandingPage String?
  isVerified        Boolean  @default(false)
  rating            Float?   @default(0)
  reviewCount       Int      @default(0)
  status            String   @default("active")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
