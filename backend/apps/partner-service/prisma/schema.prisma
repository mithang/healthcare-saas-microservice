generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/client/partner"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id          Int      @id @default(autoincrement())
  name        String
  specialty   String
  hospital    String?
  phone       String
  email       String?
  description String?
  rating      Float?
  isVerified  Boolean  @default(false)
  thumbnail   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Clinic {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  phone       String
  email       String?
  description String?
  specialties String[]
  rating      Float?
  isVerified  Boolean  @default(false)
  thumbnail   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Hospital {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  phone       String
  website     String?
  description String?
  departments String[]
  beds        Int?
  rating      Float?
  isVerified  Boolean  @default(false)
  thumbnail   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Pharmacy {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  phone       String
  email       String?
  website     String?
  description String?
  rating      Float?
  isVerified  Boolean  @default(false)
  thumbnail   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Patient {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String?
  visits    Int      @default(0)
  lastVisit String?
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
